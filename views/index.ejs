<%- include ('./partials/header.ejs') %>
<div class="table-responsive">
    <div class="container">
        <div class="card">
            <%- include ('./partials/cardHeader.ejs') %>
            <hr>
            <div class="card-body ">
                <div class="container">
                    <a class="btn btn-success" href="/">Mostrar todos os registros</a>
                    <hr>
                    <table class="table table-bordered" id="myTable">
                        <thead>
                            <tr>
                                <th>Numero Secretaria</th>
                                <th>Nome do paciente</th>
                                <th>e-mail</th>
                                <th>Fone</th>
                                <th>Data do cadastro</th>
                                <th>Data de retorno</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% records.forEach(records => { %>
                                <tr>
                                    <td><%= records.numeroSecretaria %></td>
                                    <td><%= records.nome %></td>
                                    <td><%= records.email %></td>
                                    <td><%= records.telefone %></td>
                                    <td><%= records.data_cadastro %></td>
                                    <td><%= records.data_retorno %></td>
                                    <td><%= records.status %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                    <br>
                    <a class="btn btn-success" href="/export/tocsv">Exportar dados para excel</a>
                    <a class="btn btn-primary" href="/data/:data_retorno/export/tocsv">Exportar dados para excel data</a>
                    <a class="btn btn-secundary" href="/status/:status/export/tocsv">Exportar dados para excel status</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('./partials/footer.ejs') %>